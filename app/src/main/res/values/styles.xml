<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#8A4D16</item>
        <item name="colorPrimaryDark">#8A4D16</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyToolbarMenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:colorBackground">#6F3602</item>
        <item name="android:textColor">#fffff0</item>
    </style>

    <style name="MyAlertDialogStyle" parent="">
        <item name="colorAccent">#8A4D16</item>
        <item name="android:textColorPrimary">#000006</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#8A4D16</item>
    </style>

    <style name="MyProgressBarTheme" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorAccent">#E5E0C3</item>
    </style>

</resources>
